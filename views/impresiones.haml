.contentBox
	#loading
		%h1 Cargando Informacion, favor espere.....
	#select
		#content.select
			#selectedBox
				%h4 Ingrese el Titulo
				%input{:id=>"txt_titulo",:name=>"txt_titulo"}
				%a{:href => "#print/",:style=>"display: block",:id=>"btnGoPrint"} Generar Impresion
				%h4 Productos Seleccionados
				%ul.selectedList
			#searchBox
				.title Escoja los productos que quiere agregar
				%input{:id=>"txtSearch",:name=>"txtSearch",:onchange=>"doSearchProductos(event);return false;"}
				%ul.productosList
	#printHalf
		%ul.itemList
		%ul.itemList
		%a.pdfBtn{:href=>"#toPdf/"}
	#printFull
		%ul.itemsList
		%a.pdfBtn{:href=>"#toPdf/"}

		
-['sammy', 'sammy.json', 'sammy.storage', 'sammy.template','/impresiones/app'].each do |js|
	%script{:src => "/js/#{js}.js", :type => 'text/javascript', :charset => 'utf-8'}
